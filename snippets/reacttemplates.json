{
/*
	// Place your snippets for React Templates here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/

    "React Template If": {
        "prefix": "rti",
        "body": [
            "rt-if=\"${1:condition}\""
        ],
        "description": "Add conditions to a subtree of HTML"
    },

    "React Template Repeat": {
        "prefix": "rtr",
        "body": [
            "rt-repeat=\"${1:item} in ${2:array}\""
        ],
        "description": "Repeat node with subtree for each item in array"
    },

    "React Template Scope": {
        "prefix": "rts",
        "body": [
            "rt-scope=\"${1:value} as ${2:alias}\""
        ],
        "description": "Creates new JS scope"
    },

    "React Template Props": {
        "prefix": "rtp",
        "body": [
            "rt-props=\"{${1:property}: ${2:value}}\""
        ],
        "description": "Inject properties into an element programmatically"
    },

    "React Template Class": {
        "prefix": "rtc",
        "body": [
            "rt-class=\"${1:class}\""
        ],
        "description": "Set class names programatically"
    },

    "React Template Conditional Class": {
        "prefix": "rtcc",
        "body": [
            "rt-class=\"{${1:class}: ${2:condition}}\""
        ],
        "description": "Set conditional class names programatically"
    },

    "React Template Include": {
        "prefix": "rtn",
        "body": [
            "<rt-include src=\"${1:source}\" />"
        ],
        "description": "Inject static content into file"
    },

    "React Template Pre": {
        "prefix": "rtpr",
        "body": [
            "rt-pre"
        ],
        "description": "Override whitespace removal behavior on specific tag."
    },

    "React Template Import": {
        "prefix": "rtm",
        "body": [
            "<rt-import name=\"${1:name}\" from=\"${2:from}\" />"
        ],
        "description": "Include dependency in template"
    },

    "React Template Import Default": {
        "prefix": "rtmd",
        "body": [
            "<rt-import name=\"default\" as=\"${1:as}\" from=\"${2:from}\" />"
        ],
        "description": "Include default dependency in template"
    },

    "React Template Import Alias": {
        "prefix": "rtma",
        "body": [
            "<rt-import name=\"${1:name}\" as=\"${2:as}\" from=\"${3:from}\" />"
        ],
        "description": "Include dependency in template as alias"
    },

    "React Template Stateless": {
        "prefix": "rtst",
        "body": [
            "rt-stateless"
        ],
        "description": "Repeat DOM node with subtree for each item in array"
    }
}
